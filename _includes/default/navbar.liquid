<style>
    /* Force Nav to be one line using Flexbox */
    .site-header nav ul { 
        display: flex !important; 
        flex-wrap: nowrap !important; 
        align-items: center !important; 
        white-space: nowrap !important;
        justify-content: flex-end; /* Align right */
    }
    
    /* Compact items */
    .site-header nav li { 
        padding: 0 4px !important; 
        margin: 0 !important;
    }
    
    /* Separators */
    .site-header nav li.separator { 
        padding: 0 2px !important; 
    }

    /* General Labels - Increased Size (Intermediate) */
    .navbar-label { font-size: 16px !important; }

    /* Language Switcher Specifics */
    .lang-switch-item {
        font-size: 12px !important; 
        margin-left: 8px !important;
        display: flex !important;
        align-items: center !important;
        border-left: 1px solid #ccc; /* Use border instead of | separator for cleaner look */
        padding-left: 8px !important;
    }
    .lang-switch-item .navbar-label {
        font-size: 12px !important; /* Keep switcher small */
    }
</style>

<header class="site-header" style="display: flex; align-items: center; justify-content: space-between;">
  <!-- BRANDING: LOGO ONLY -->
  <div class="branding">
    <a href="{{ '/' | relative_url }}">
      {% assign logo_path = site.logo | default: site.avatar | default: site.theme_settings.avatar %}
      {% if logo_path %}
        <img class="avatar" src="{{ logo_path | relative_url }}" alt="{{ site.title }}" style="height: 80px; width: auto; vertical-align: middle;"/>
      {% else %}
        <h1 class="site-title">{{ site.title }}</h1>
      {% endif %}
    </a>
  </div>

  <!-- NAV -->
  <nav class="clear" style="display: flex; align-items: center;">
    
    <!-- MENU ITEMS (First) -->
    <ul class="hide">
      
      <!-- DYNAMIC PAGES FROM CONFIG -->
      {% if site.header_pages %}
        {% assign items_rendered = false %}
        {% for path in site.header_pages %}
          {% assign my_page = site.pages | where: "path", path | first %}
          {% if my_page.title %}
            {% if my_page.lang == page.lang %}
            <!-- Only show separator if not the very first item -->
            {% if items_rendered %}<li class="separator"> | </li>{% endif %}
            <li>
              <a class="clear" aria-label="{{ my_page.title }}" title="{{ my_page.title }}" href="{{ my_page.url | relative_url }}">
                <span class="navbar-label ">{{ my_page.title }}</span>
              </a>
            </li>
            {% assign items_rendered = true %}
            {% endif %}
          {% endif %}
        {% endfor %}
      {% endif %}
      
    </ul>

    <!-- LANGUAGE SWITCHER (Second) -->
    <div style="margin-left: 15px;">
        {% include language-switch.html %}
    </div>

    <!-- TOGGLE MENU (Mobile) -->
    <a aria-label="pull" id="pull" class="toggle" href="#">
      <i class="fas fa-bars fa-lg"></i>
    </a>

  </nav>
</header>